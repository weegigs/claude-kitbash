{
  "description": "Search quality guards - blocks stale year queries",
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "WebSearch|mcp__perplexity__.*",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/hooks/date-guard.sh"
          }
        ]
      }
    ]
  }
}
